#!/bin/bash
#
# POP_SENTAKU_CAREPLAN2.SEARCH
# ケアプラン２選択　検索用CGI
#
# Written by K.Aoyama :20140725

#--------------------------------------------------------------
# ログ
source /home/hands/E-LIFE/CAREPLAN/CGI/CAREPLAN.INI &> /dev/null
source /home/hands/.bashrc &> /dev/null
mkdir -p ${log_dir}/$(date +%Y%m%d)
exec 2> ${log_dir}/$(date +%Y%m%d)/LOG.$(basename ${0}).$HOSTNAME.$(date +%Y%m%d) ; set -xv
#--------------------------------------------------------------

#--------------------------------------------------------------
rm -f $tmp-*
#--------------------------------------------------------------

#--------------------------------------------------------------
function error_exit {
  rm -f $tmp-*
  exit 0
}
#--------------------------------------------------------------

#--------------------------------------------------------------
# 変数の定義
namedata=$1

# 必要な値の取得
eval $(name-source ${namedata})
#--------------------------------------------------------------

# テスト
# POSTされてくるパラメータ

#--------------------------------------------------------------
# 入力データのチェック
# ユーザＩＤ
[ -z "${USER_ID}" -o "${USER_ID}" = "_" ] && error_exit "ログインユーザが不明です"
# 利用者
[ -z "${Riyoushaid}" -o "${Riyoushaid}" = "_" ] && error_exit "利用者が不明です"


#--------------------------------------------------------------
# ヘッダー部分生成
#--------------------------------------------------------------
cat <<- FIN > $tmp-header
FIN

#--------------------------------------------------------------
# 基本ファイルの取得
cat /DATA/E-LIFE/CAREPLAN/CAREPLAN_KAIGO/${Riyoushaid}/CAREPLAN_DATE |
#--------------------------------------------------------------
# 利用者ID
awk '$1=="'${Riyoushaid}'"&&$(NF-2)!="9"'     |
#--------------------------------------------------------------
# 検索
#--------------------------------------------------------------
# 1:利用者ID 2:データID
self 1 2 3               |
LANG=C sort -k1,2        |
rank                     >  ${tmp}-careplan_date


# 計画書のリストの日付を抽出
cat ${tmp}-careplan_date


## 終了
rm -f $tmp-*
exit 0
