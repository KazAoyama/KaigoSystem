#!/bin/bash
#
# POP_SENTAKU_MONITORING.SEARCH
# 個別援助計画書選択　検索用CGI
#
# Written by K.Aoyama :20140213

#--------------------------------------------------------------
# ログ
source /home/hands/E-LIFE/CAREPLAN/CGI/CAREPLAN.INI &> /dev/null
source /home/hands/.bashrc &> /dev/null
mkdir -p ${log_dir}/$(date +%Y%m%d)
exec 2> ${log_dir}/$(date +%Y%m%d)/LOG.$(basename ${0}).$HOSTNAME.$(date +%Y%m%d) ; set -xv
#--------------------------------------------------------------

#--------------------------------------------------------------
rm -f $tmp-*
#--------------------------------------------------------------

#--------------------------------------------------------------
function error_exit {
  rm -f $tmp-*
  exit 0
}
#--------------------------------------------------------------

#--------------------------------------------------------------
# 変数の定義
namedata=$1

# 必要な値の取得
eval $(name-source ${namedata})
#--------------------------------------------------------------

# テスト
# POSTされてくるパラメータ

#--------------------------------------------------------------
# 入力データのチェック
# ユーザＩＤ
[ -z "${USER_ID}" -o "${USER_ID}" = "_" ] && error_exit "ログインユーザが不明です"
# 利用者
[ -z "${Riyoushaid}" -o "${Riyoushaid}" = "_" ] && error_exit "利用者が不明です"


#--------------------------------------------------------------
# ヘッダー部分生成
#--------------------------------------------------------------
cat <<- FIN > $tmp-header
FIN

#--------------------------------------------------------------
# 基本ファイルの取得
cat ${pompa_dir}/CAREPLAN_KAIGO/${Riyoushaid}/MONITORING_KAIGO_NEW |
#--------------------------------------------------------------
# 利用者ID
awk '$1=="'${Riyoushaid}'"&&$2=="'${hdKeikakuSakuseiDate}'"&&$(NF-2)!="9"'     |
#--------------------------------------------------------------
# 検索
#--------------------------------------------------------------
# 1:作成日（西暦） 2:作成日（和暦）
self 3                 |
LANG=C sort -k1,1nr         |
rank                        |
awk '{gengou="";year=0;if($2<19120729){gengou="明治";year=substr($2,1,4)-1868;}
else if($2<19261224){gengou="大正";year=substr($2,1,4)-1911;}
else if($2<19890107){gengou="昭和";year=substr($2,1,4)-1925;}
else{gengou="平成";year=substr($2,1,4)-1988;};print $1,$2,gengou year"年"int(substr($2,5,2))"月"int(substr($2,7,2))"日"}'     |
awk '{print $0}'            > ${tmp}-keikaku

# 手順書データを表示
cat ${tmp}-keikaku


## 終了
rm -f $tmp-*
exit 0
