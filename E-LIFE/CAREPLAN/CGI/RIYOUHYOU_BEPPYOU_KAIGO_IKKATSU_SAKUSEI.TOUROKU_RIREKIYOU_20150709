# 提供体制加算のコード
awk '($4=="12"&&$9=="6100")||($4=="12"&&$9=="6101")||($4=="13"&&$9=="6101")||($4=="13"&&$9=="6102")||($4=="14"&&$9=="6101")||($4=="15"&&$9=="6100")||($4=="15"&&$9=="6101")||($4=="15"&&$9=="6102")||($4=="15"&&$9=="6103")||($4=="16"&&$9=="6100")||($4=="16"&&$9=="6101")||($4=="16"&&$9=="6102")||($4=="72"&&$9=="6101")||($4=="72"&&$9=="6102")' |
awk 'BEGIN {gendogaku='${kaigokijungendogaku}'};$15=="1"{kijunnaigendogaku=$13;kijungaigendogaku=0;print $0,kijunnaigendogaku,kijungaigendogaku}' |
self 1/14 16/NF |
LANG=C sort -k1,7 |
