#!/bin/bash
#
# JIHI_SERVICE.SEARCH
# 自費サービス　検索用CGI
#
# Written by K.Aoyama :20140126

#--------------------------------------------------------------
# ログ
source /home/hands/E-LIFE/HOUMONKAIGO/CGI/HOUMONKAIGO.INI &> /dev/null
source /home/hands/.bashrc &> /dev/null
mkdir -p ${log_dir}/$(date +%Y%m%d)
exec 2> ${log_dir}/$(date +%Y%m%d)/LOG.$(basename ${0}).$HOSTNAME.$(date +%Y%m%d) ; set -xv
#--------------------------------------------------------------

#--------------------------------------------------------------
rm -f $tmp-*
#--------------------------------------------------------------

#--------------------------------------------------------------
function error_exit {
  rm -f $tmp-*
  exit 0
}
#--------------------------------------------------------------

#--------------------------------------------------------------
# 変数の定義
namedata=$1

# 必要な値の取得
eval $(name-source ${namedata})
#--------------------------------------------------------------

# テスト

#--------------------------------------------------------------
# 入力データのチェック
# ユーザＩＤ
[ -z "${userid}" -o "${userid}" = "_" ] && error_exit "ログインユーザが不明です"
# 利用者ID
[ -z "${Riyoushaid}" -o "${Riyoushaid}" = "_" ] && error_exit "利用者IDが不明です"
# 対象年月
[ -z "${hdTaishouNengappi}" -o "${hdTaishouNengappi}" = "_" ] && hdTaishouNengappi=$(date +%Y%m%d | self 1 | awk '{print substr($1,1,6)}')

#--------------------------------------------------------------
# ヘッダー部分生成
#--------------------------------------------------------------
cat <<- FIN > $tmp-header
FIN

#--------------------------------------------------------------
# ファイルの取得
cat ${pompa_dir}/JIHI_SERVICE/${Riyoushaid}/${hdTaishouNengappi}/JIHI_SERVICE |
# 1:利用者ID  2:対象年月日 3:ID    4:実施日付    5:開始時間
# 6:終了時間  7:項目       8:内容  9:単位時間    10:費用
# 11:担当者   12:単価      13:税率 14:有効フラグ 15:処理時間
# 16:ユーザID
#--------------------------------------------------------------
awk '$1=="'${Riyoushaid}'"&&$2=="'${hdTaishouNengappi}'"&&$(NF-2)!="9"'     |
# サービス実施日付、開始時間、終了時間でソート
LANG=C sort -k4,6           |
delf 1 2 NF-2/NF  > ${tmp}-jihi_service
[ $(plus ${PIPESTATUS[@]}) -ne 0 ] && error_exit "自費サービス取得エラー"


#--------------------------------------------------------------
# 出力
cat ${tmp}-jihi_service


## 終了
rm -f $tmp-*
exit 0
