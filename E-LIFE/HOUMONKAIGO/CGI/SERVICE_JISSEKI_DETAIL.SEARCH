#!/bin/bash
#
# SERVICE_JISSEKI_DETAIL.SEARCH
# サービス実績詳細　検索用CGI
#
# Written by K.Aoyama :20131212

#--------------------------------------------------------------
# ログ
source /home/hands/E-LIFE/HOUMONKAIGO/CGI/HOUMONKAIGO.INI &> /dev/null
source /home/hands/.bashrc &> /dev/null
mkdir -p ${log_dir}/$(date +%Y%m%d)
exec 2> ${log_dir}/$(date +%Y%m%d)/LOG.$(basename ${0}).$HOSTNAME.$(date +%Y%m%d) ; set -xv
#--------------------------------------------------------------

#--------------------------------------------------------------
rm -f $tmp-*
#--------------------------------------------------------------

#--------------------------------------------------------------
function error_exit {
  rm -f $tmp-*
  exit 0
}
#--------------------------------------------------------------

#--------------------------------------------------------------
# 変数の定義
namedata=$1

# 必要な値の取得
eval $(name-source ${namedata})
#--------------------------------------------------------------

# テスト
# POSTされてくるパラメータ

#--------------------------------------------------------------
# 入力データのチェック
# ユーザＩＤ
[ -z "${USER_ID}" -o "${USER_ID}" = "_" ] && error_exit "ログインユーザが不明です"
# 利用者
[ -z "${Riyoushaid}" -o "${Riyoushaid}" = "_" ] && error_exit "利用者が不明です"
# ID
[ -z "${DetailID}" -o "${DetailID}" = "_" ] && error_exit "IDが不明です"

#--------------------------------------------------------------
# ヘッダー部分生成
#--------------------------------------------------------------
cat <<- FIN > $tmp-header
KenkouJoutai
TokkiJikou
FIN

cat ${tmp}-header   |
yarr                > ${tmp}-header_yoko

#--------------------------------------------------------------
# 基本ファイルの取得
cat ${pompa_dir}/HOUMONKAIGO/${Riyoushaid}/SERVICE_JISSEKI_DETAIL |
#--------------------------------------------------------------
# データID
awk '$1=="'${DetailID}'"'     |
#--------------------------------------------------------------
# 検索
#--------------------------------------------------------------
# 削除フラグ、ユーザ、更新日付をはずす
delf NF-2/NF                |
delf 1/5                      |
cat ${tmp}-header_yoko -    |
tateyoko                    |
awk '{print "k",$0}'        > ${tmp}-jisseki_detail

#--------------------------------------------------------------
# 詳細サービスファイルの取得
cat ${pompa_dir}/HOUMONKAIGO/${Riyoushaid}/SERVICE_JISSEKI_DETAIL_NAIYOU |
#--------------------------------------------------------------
# データID
awk '$1=="'${DetailID}'"'     |
#--------------------------------------------------------------
# 検索
#--------------------------------------------------------------
# 削除フラグ、ユーザ、更新日付をはずす
delf 1/5 NF-2/NF                |
awk '{print "s",$0}'        >> ${tmp}-jisseki_detail

#--------------------------------------------------------------
# 詳細費用ファイルの取得
cat ${pompa_dir}/HOUMONKAIGO/${Riyoushaid}/SERVICE_JISSEKI_DETAIL_HIYOU |
#--------------------------------------------------------------
# データID
awk '$1=="'${DetailID}'"'     |
#--------------------------------------------------------------
# 検索
#--------------------------------------------------------------
# 削除フラグ、ユーザ、更新日付をはずす
self 6 7                      |
awk '{print "c",$0}'        >> ${tmp}-jisseki_detail

# 実績詳細データを表示
cat ${tmp}-jisseki_detail


## 終了
rm -f $tmp-*
exit 0
