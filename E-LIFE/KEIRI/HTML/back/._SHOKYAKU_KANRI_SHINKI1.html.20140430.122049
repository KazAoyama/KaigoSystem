    <script>

	$(document).ready(function() {
      $('#taishosha_sentaku').on('click',function(){
                    window.open("about:blank",'nyukyoshasentakuwindow','width=756, height=500, menubar=no, toolbar=no, scrollbars=no');
                    $('#MODE').val('init');
                    document.MENU_FORM.method="POST";
                    document.MENU_FORM.action="POP_SENTAKU_NYUKYOSHA.CGI";
                    document.MENU_FORM.target="nyukyoshasentakuwindow";
                    document.MENU_FORM.submit();
                });

      $("#search").click(function(){
          $("#MODE").attr({value:"search"});
          var form = $("#MENU_FORM");
          form.attr({
                target: "_top",
                method: "post",
                action: "/E-LIFE/KEIRI/cgi-bin/SHOKYAKU_KANRI_SHINKI.CGI"
          });
                $('#kensakutyu').html('<table style="width:100%; height:100%"><tr><td style="font-size:16px; width:100%; text-align:center;"><div id="blink_1">検索中です。しばらくお待ちください。</div></td></tr></table>');
                form.submit();
        });

      $("#tenkai").click(function(){
          $("#MODE").attr({value:"tenkai"});
          var form = $("#MENU_FORM");
          form.attr({
                target: "_top",
                method: "post",
                action: "/E-LIFE/KEIRI/cgi-bin/SHOKYAKU_KANRI_SHINKI.CGI"
          });
                $('#kensakutyu').html('<table style="width:100%; height:100%"><tr><td style="font-size:16px; width:100%; text-align:center;"><div id="blink_1">検索中です。しばらくお待ちください。</div></td></tr></table>');
                form.submit();
        });

      $("#touroku").click(function(){
          $("#MODE").attr({value:"touroku"});
          var form = $("#MENU_FORM");
          form.attr({
                target: "_top",
                method: "post",
                action: "/E-LIFE/KEIRI/cgi-bin/SHOKYAKU_KANRI_SHINKI.CGI"
          });
                form.submit();
        });

      $("#clear").click(function(){
          $("#MODE").attr({value:"init"});
          var form = $("#MENU_FORM");
          form.attr({
                target: "_top",
                method: "post",
                action: "/E-LIFE/KEIRI/cgi-bin/SHOKYAKU_KANRI_SHINKI.CGI"
          });
                form.submit();
        });


      $('input','.keisan').keyup(function(){
		//一時金額
		var numA = $('input:eq(0)','.keisan').val();
		//非返還金額
		var numB = $('input:eq(1)','.keisan').val();
		//一時金額が空なら焼却金額も空にする
		if(!numA){
			$('input:eq(2)','.keisan').val('');
			return false;
		};
		//非返還金額が空なら焼却金額も空にする
		if(!numB){
			$('input:eq(2)','.keisan').val('');
			return false;
		};
		$('input:eq(2)','.keisan').val(Math.floor(numA-numB));
	});
	//初期表示
      $('input','.keisan').each(function(){
		var numA = $('input:eq(0)','.keisan').val();
		var numB = $('input:eq(1)','.keisan').val();
		$("#shokyaku_kingaku_tsuki").val(Math.floor($("#shokyaku_kingaku_tsuki").val()));
		if(!numA){
			$('input:eq(2)','.keisan').val('');
			return false;
		};
		if(!numB){
			$('input:eq(2)','.keisan').val('');
			return false;
		};
		$('input:eq(2)','.keisan').val(Math.floor(numA-numB));
	});
      $('input','.kaisu_keisan').keyup(function(){
		var numA = $('input:eq(2)','.keisan').val();//償却金額
		var numB = $('input:eq(1)','.kaisu_keisan').val();//償却回数
		var numC = $('input:eq(2)','.kaisu_keisan').val();//償却金額（月）hidden
		var numD = $('input:eq(3)','.kaisu_keisan').val();//償却金額（月）
		var numE = $('input:eq(4)','.kaisu_keisan').val();//償却金額（1回目）
		var numF = $('input:eq(5)','.kaisu_keisan').val();//償却金額（最後）
        numA = parseInt(numA);
		numB = parseInt(numB);
		numC = parseInt(numC);
		numD = parseInt(numD);
		numE = parseInt(numE);
		numF = parseInt(numF);
		if(!numA){
			$('input:eq(1)','.keisan').val('');
			return false;
		};
		if(!numB){
			$('input:eq(2)','.kaisu_keisan').val('');
			$('input:eq(3)','.kaisu_keisan').val('');
			$('input:eq(4)','.kaisu_keisan').val('');
			$('input:eq(5)','.kaisu_keisan').val('');
			$('input:eq(6)','.kaisu_keisan').val('');
			return false;
		};
			$('input:eq(2)','.kaisu_keisan').val(Math.floor(numA/numB));
			$('input:eq(3)','.kaisu_keisan').val(Math.floor(numC));
			$('input:eq(5)','.kaisu_keisan').val(Math.floor(numA-(numD*(numB-1)+numE)+numD));
		if(!numC){
			$('input:eq(3)','.kaisu_keisan').val('');
			$('input:eq(4)','.kaisu_keisan').val('');
			$('input:eq(5)','.kaisu_keisan').val('');
			return false;
		};
			$('input:eq(3)','.kaisu_keisan').val(Math.floor(numC));
			$('input:eq(5)','.kaisu_keisan').val(Math.floor(numA-(numD*(numB-1)+numE)+numD));
		if(!numD){
			$('input:eq(4)','.kaisu_keisan').val('');
			$('input:eq(5)','.kaisu_keisan').val('');
			return false;
		};
			$('input:eq(3)','.kaisu_keisan').val(Math.floor(numC));
			$('input:eq(5)','.kaisu_keisan').val(Math.floor(numA-(numD*(numB-1)+numE)+numD));
		if(!numE){
			$('input:eq(4)','.kaisu_keisan').val('');
			$('input:eq(5)','.kaisu_keisan').val('');
			return false;
		};
	});
	});


    </script>



