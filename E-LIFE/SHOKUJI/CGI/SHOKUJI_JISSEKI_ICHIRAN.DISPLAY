  awk '$11=="1"&&$14<="'${Taishoubi_sed}'"&&$15>="'${Taishoubi_sed}'"&&$(NF-2)!="9"{print $0}'
elif  [ "${Shokuji}" = "3" ] ; then
  awk '$12=="1"&&$14<="'${Taishoubi_sed}'"&&$15>="'${Taishoubi_sed}'"&&$(NF-2)!="9"{print $0}'
