#!/bin/bash
#
# FACILITY_MASTER.SEARCH
# 部屋マスタ　検索用CGI
#
# Written by K.Aoyama :20140908

#--------------------------------------------------------------
# ログ
source /home/hands/E-LIFE/SYSTEM_SETTEI/CGI/SYSTEM_SETTEI.INI &> /dev/null
source /home/hands/.bashrc &> /dev/null
mkdir -p ${log_dir}/$(date +%Y%m%d)
exec 2> ${log_dir}/$(date +%Y%m%d)/LOG.$(basename ${0}).$HOSTNAME.$(date +%Y%m%d) ; set -xv
#--------------------------------------------------------------

#--------------------------------------------------------------
rm -f $tmp-*
#--------------------------------------------------------------

#--------------------------------------------------------------
function error_exit {
  rm -f $tmp-*
  exit 0
}
#--------------------------------------------------------------

#--------------------------------------------------------------
# 変数の定義
namedata=$1

# 必要な値の取得
eval $(name-source ${namedata})
#--------------------------------------------------------------

# テスト

#--------------------------------------------------------------
# 入力データのチェック
# ユーザＩＤ
[ -z "${userid}" -o "${userid}" = "_" ] && error_exit "ログインユーザが不明です"

#--------------------------------------------------------------
# ヘッダー部分生成
#--------------------------------------------------------------
cat <<- FIN > $tmp-header
FIN

#--------------------------------------------------------------
# ファイルの取得
cat ${home_dir}/TBL/FACILITY_MASTER/FACILITY_MASTER |
# 1:施設       2:スケジュールID 3:スケジュール 4:スケジュールタイプ 5:費用
# 6:有効フラグ 7:処理時間       8:ユーザID
#--------------------------------------------------------------
awk '$1=="'${shisetsu}'"'     |
delf 1 NF-2/NF  > ${tmp}-facility_master
[ $(plus ${PIPESTATUS[@]}) -ne 0 ] && error_exit "スケジュールマスタ取得エラー"


#--------------------------------------------------------------
# 出力
cat ${tmp}-facility_master


## 終了
rm -f $tmp-*
exit 0
