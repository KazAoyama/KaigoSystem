#!/bin/bash
#
# SERVICE_MASTER.SEARCH
# スケジュールマスタ　検索用CGI
#
# Written by K.Aoyama :20131228

#--------------------------------------------------------------
# ログ
source /home/hands/E-LIFE/SYSTEM_SETTEI/CGI/SYSTEM_SETTEI.INI &> /dev/null
source /home/hands/.bashrc &> /dev/null
mkdir -p ${log_dir}/$(date +%Y%m%d)
exec 2> ${log_dir}/$(date +%Y%m%d)/LOG.$(basename ${0}).$HOSTNAME.$(date +%Y%m%d) ; set -xv
#--------------------------------------------------------------

#--------------------------------------------------------------
rm -f $tmp-*
#--------------------------------------------------------------

#--------------------------------------------------------------
function error_exit {
  rm -f $tmp-*
  exit 0
}
#--------------------------------------------------------------

#--------------------------------------------------------------
# 変数の定義
namedata=$1

# 必要な値の取得
eval $(name-source ${namedata})
#--------------------------------------------------------------

# テスト

# 初期値は一応シニアで
[ "$ServiceTateya" = "_" -o -z "$ServiceTateya" ] && ServiceTateya="01"

#--------------------------------------------------------------
# 入力データのチェック
# ユーザＩＤ
[ -z "${userid}" -o "${userid}" = "_" ] && error_exit "ログインユーザが不明です"

#--------------------------------------------------------------
# ヘッダー部分生成
#--------------------------------------------------------------
cat <<- FIN > $tmp-header
FIN

#--------------------------------------------------------------
# ファイルの取得
cat ${home_dir}/TBL/SEIKYU/SERVICE_MASTER |
# 1:施設         2:建屋ID    3:サービスID 4:サービス区分(固定) 5:サービス名
# 6:集計グループ 7:単価      8:表示順     9:課税               10:有効フラグ
# 11:処理時間    12:ユーザID
#--------------------------------------------------------------
awk '$1=="'${shisetsu}'"&&$2=="'${ServiceTateya}'"'     |
#awk '$1=="'${shisetsu}'"'     |
awk '$(NF-2)!="9"'            |
delf 1 NF-2/NF                |
LANG=C sort -k7,7n            > ${tmp}-service_master
[ $(plus ${PIPESTATUS[@]}) -ne 0 ] && error_exit "サービスマスタ取得エラー"

#--------------------------------------------------------------
# 出力
cat ${tmp}-service_master


## 終了
rm -f $tmp-*
exit 0
