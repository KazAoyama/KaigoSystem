awk '{if($1=="2"){print $1,"女"}
     else if($1=="1"){print $1,"男"}
      }'             |
awk '{if($1=="'${Seibetsu}'"){print $0,"selected"}
     else{print $0,"@"}
      }'             > $tmp-seibetsu

# 元号
