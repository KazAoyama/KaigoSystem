  echo "${NYUUKYOSHISETSUID}" | awk '$1!~/^1/' > $tmp-shisetsu
if [ -s $tmp-shisetsu ] ; then
  SHISETSUNAME="$(awk '$1=="'${NYUUKYOSHISETSUID}'"{print $2}' ${tbl_dir}/SHISETSU_MASTER/SHISETSU_KIHON | head -1)"
