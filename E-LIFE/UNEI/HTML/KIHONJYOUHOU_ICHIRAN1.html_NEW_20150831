        function search(page){
                 $("#MODE").attr({value:"search"});
                 $('#PAGE').val(page);
                 var form = $("#KENSAKU_FORM");
                 form.attr({
                       target: "_top",
                       method: "post",
                       action: "KIHONJYOUHOU_ICHIRAN.CGI"
                 });
               form.submit();
          }

