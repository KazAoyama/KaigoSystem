                        Unit   : $("#Unit").val(),
                    Kyoshitsu  : $("#Kyoshitsu").val(),
                   Nyuukyosha  : $("#Nyuukyosha").val(),
               TaikyoshaHyouji : $("#TaikyoshaHyouji").val(),
                    }; 
                      

            $.ajax({
                    url:"AJAX_KIHONJYOUHOU_ICHIRAN_RIYOUSHA_SELECT.CGI",
                   type:"POST",
                   data:data,
                success:function(response){
                        $("#ShisetsuSelectTr").html(response);
                }
             })

    });
