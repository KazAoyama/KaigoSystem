//登録ボタン
function touroku_function(){
  with(tab){
  target="_top";
  method="post";
  MODE.value="touroku";
  action="/E-LIFE/UNEI/cgi-bin/KOJINJYOUHOU_SHOUSAI_ASSESSMENT_JYOUHOUSHEET.CGI";
  submit();
  }
}


//登録前確認処理
function touroku_kakunin(){
// html5のバリデーションチェックが動いたあとsubmitされないようにする
  var f = document.getElementById("tab");
  if ( f.checkValidity() ) {
  } else {
      return false;
  }
  // submit
  touroku_function();
}
